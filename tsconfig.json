{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": true,           // Prevent TypeScript from writing output files
    "skipLibCheck": true      // Skip type checks on library files for faster builds
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.js"]  // Exclude JS files from compilation
}
