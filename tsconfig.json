{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": true,           // Prevent TypeScript from emitting compiled files
    "skipLibCheck": true      // Skip type checks for faster builds
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],  // Only include TypeScript files
  "exclude": ["node_modules", "dist", "**/*.js"]  // Exclude JavaScript files from being compiled
}
