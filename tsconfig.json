{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "outDir": "dist",
    "noEmit": true,         // Prevents TypeScript from writing output files
    "skipLibCheck": true,   // Optional: Speeds up build by skipping type checks on library files
    "checkJs": false        // Prevents TypeScript from type-checking JavaScript files
  },
  "include": ["src/**/*"]
}
